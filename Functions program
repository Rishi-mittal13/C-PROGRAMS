
/Q1:-Write a program to calculate x^n without using library function pow( ) but using user defined function.

#include<stdio.h>
int  power(int x ,int y)
{   int i,result=1;
   for(i=1;i<=y;i++)
    {  result*=x;
    }
    return result;
}
  int main()
  {  int a,b,result1;
  printf("enter number :");
    scanf("%d",&a);
     printf("enter power of number :");
     scanf("%d",&b);
     result1=power(a,b);
      printf("result = %d",result1);
      return 0;
  } 








//Q2:-Write a program that input the meal charge of a customer. The discount is 10% of the meal charge. The tax should be 20% of the meal cost.  The tip should be 15% of the total after adding the tax.  Display the total bill on the screen using function.

#include<stdio.h>
int billing(int a)
{  int b,c,d,h;
  printf("\n\n\t\t___________________________________\n");
   printf("\n\t\t\t   -:BILL:-\n\n");
   printf("\t\t --> YOUR MEAL CHARGE=+%d₹\n",a);
   b=a- a/10;    //10% discount
    printf("\t\t --> 10 PRECENT DISCOUNT =-%d₹\n",a/10);
   c=b+b/5;     //20% tax
   printf("\t\t --> 20 PRECENT TAX= +%d₹\n",b/5);
   h=(3*c)/20;
   d=c+h;  //15% tip
   printf("\t\t --> 15 PRECENT TIP/SERVICE TAX = +%d₹\n",h);
   return d ;
} 
 int main()
 {   int A,B;
     printf("enter meal charge:  ");
      scanf("%d",&A);
     B= billing(A);
     printf("\t\t___________________________________\n");
     printf("\n\t\t\tTOTAL BILL IS = %d₹ only\n",B);
      printf("\t\t___________________________________\n\n\n");
 
     return 0;
 } 
     








//Q:- swapping two numbers(call by reference)
#include<stdio.h>
void ref(int *p, int *p1,int*p2)
{  
*p2=*p;
*p=*p1;
*p1=*p2;
}
int main()
{	
int a;
int b;
int c;
scanf("%d%d",&a,&b);
printf("%d\n%d\n", a,b);
ref(&a,&b,&c);
printf("a=%d\nb=%d\n", a,b);
return 0;
}









//Swapping 2 numbers using Call by Value

#include <stdio.h>
void swap(int,int);
int main()
{
   int x, y;
   printf("Enter the value of x and y\n");
   scanf("%d%d",&x,&y);
   printf("Before Swapping\nx = %d\ny = %d\n", x, y);
swap(x, y); 
 
   return 0;}
void swap(int a, int b)
{
   int temp; 
   temp = b;
   b = a;
   a = temp;
   printf("after swapping: \n ");
    printf("Values is %d  %d\n",a,b);
}
 









//Q:-4 Write a program to find factorial of a number using function of no return type no argument, no return type with argument, return type with no argument and return type with argument.

 // a). no return type no argument.
   #include<stdio.h>
   void fact(void)
   {   int i,z=1,a;
       printf("enter a no.: ");
        scanf("%d",&a);
        for(i=a;i>0;i--)
          {  z*=i;
          } 
         printf("factorial of input no. is %d",z);
   } 
     int main()
     {   
         fact();
          return 0;
     } 
     
     
     
        









 // b). no return type argument.
   #include<stdio.h>
   void fact(int a)
   {   int i,z=1;
        for(i=a;i>0;i--)
          {  z*=i;
          } 
         printf("factorial of input no. is %d",z);
   } 
     int main()
     {   
      int a;
      printf("enter a no.: ");
      scanf("%d",&a);
         fact(a);
          return 0;
     } 
     
     
     
   




 // c). return type argument.
   #include<stdio.h>
   int fact(int a)
   {   int i,z=1;
        for(i=a;i>0;i--)
          {  z*=i;
          } 
      return z;   
   } 
     int main()
     {   
      int a,factorial;
      printf("enter a no.: ");
      scanf("%d",&a);
     factorial= fact(a);
     printf("%d",factorial);
          return 0;
     } 









 // d). return type no argument.
   #include<stdio.h>
   int fact(void)
   {    int a;
     printf("enter a no.: ");
      scanf("%d",&a);
    
      int i,z=1;
        for(i=a;i>0;i--)
          {  z*=i;
          } 
      return z;   
   } 
     int main()
     {   
      int factorial;
     factorial= fact();
     printf("factorial of input no. is : %d",factorial);
          return 0;
     } 
     
     
     
     








//Write a program to input coefficients of quadratic equation and pass them to function () QUAD. This returnable function computes whether roots of a quadratic equation are real or imaginary.


#include<stdio.h>
void QUAD(void)
{  int a,b,c,d;
   printf("entet a,b,c coefficient of quadratic equation : ");
   scanf("%d%d%d",&a,&b,&c);
   d=(b*b)-(4*a*c);
   if(d>0)
   {  printf("roots of given quadratic equation are real.");
   } 
    else if(d<0)
    
    { printf("roots of given quadratic equation is imaginary.");
    } 
    else 
      {  printf("root of given quadratic equation is real.");
    } 
    
} 
  int main()
  { 
     QUAD();
    return 0;
  } 















      
