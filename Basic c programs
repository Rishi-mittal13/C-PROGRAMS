    scanf("%c", &c);  
    printf("ASCII value of %c = %d", c, c);
    return 0;
}



//ques6)C Program to Compute Quotient and Remainder.
ans6)
#include <stdio.h>
int main() 
{
    int dividend, divisor, quotient, remainder;
    printf("Enter dividend: ");
    scanf("%d", &dividend);
    printf("Enter divisor: ");
    scanf("%d", &divisor);
    quotient = dividend / divisor;
    remainder = dividend % divisor;
    printf("Quotient = %d\n", quotient);
    printf("Remainder = %d", remainder);
    return 0;C Program to Compute Quotient and Remainder.
}




//ques8)C Program to Demonstrate the Working of Keyword long.
ans8)
#include <stdio.h>
int main() 
{
    int a;
    long b;   
    long long c;  
    double e;
    long double f;

    printf("Size of int = %zu bytes \n", sizeof(a));
    printf("Size of long int = %zu bytes\n", sizeof(b));
    printf("Size of long long int = %zu bytes\n", sizeof(c));
    printf("Size of double = %zu bytes\n", sizeof(e));
    printf("Size of long double = %zu bytes\n", sizeof(f));
    
    return 0;
}




//ques9)C Program to Swap Two Numbers.
ans9)
#include<stdio.h>  
 int main()    
{    
int a=10, b=20;      
printf("Before swap a=%d b=%d",a,b);      
a=a+b;    
b=a-b;   
a=a-b;  
printf("\nAfter swap a=%d b=%d",a,b);    
return 0;  
}   


//ques10)C Program to solve area of square
ans10)
#include<stdio.h>
#include<conio.h>
void main()
{
    float side,area;
    clrscr();
 
    printf("\n Enter the Length of Side : ");
    scanf("%f",&side);
 
    area = side * side ;
 
    printf("\n Area of Square : %f",area);
    getch();
}


//ques11)C Program to find area of triangle using heronâ€™s formula.
ans11)
#include<stdio.h>
#include<math.h>

void main()
{

     float a,b,c,s,area;

      

     printf("Enter the length of sides of triangle");

     scanf("%f %f %f",&a,&b,&c);

      

     s = (a+b+c)/2; 

     area = (sqrt)(s*(s-a)*(s-b)*(s-c));

      

     printf("Area of triangle =%f",area);

     getch();

}



//ques12)C program to find area of trapezium.
ans12)
#include <stdio.h>
 
int main()
{
    float a, b, h;
    float area;
 
    printf("Enter the value for two bases & height of the trapezium:");
    scanf("%f%f%f", &a, &b, &h);
    area = 0.5 * (a + b) * h ;
    printf("Area of the trapezium is: %.3f", area);
    return 0;
}






