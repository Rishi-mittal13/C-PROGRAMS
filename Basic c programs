{   
    int number;
   
    printf("Enter an integer: ");  
    
    
    scanf("%d", &number);

    
    printf("You entered: %d", number);
    
    return 0;
}



//ques4)C Program to Multiply Two Floating-Point Numbers.
ans4)
#include <stdio.h>
int main() 
{
    double a,b,sum;
    printf("Enter two numbers: ");
    scanf("%lf %lf",&a,&b);  
    sum= a * b;
    printf("Product = %.2lf",sum);
    
    return 0;
}


//que:-5 to find ascii value
 #include <stdio.h>
int main() {  
    char c;
